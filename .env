# Filename of the example blog post PDF in the documents folder
EXAMPLE_POST_FILE=example_post.pdf

# Filename of the company description PDF in the documents folder
COMPANY_DESCRIPTION_FILE=company_description.pdf

# Directory where PDF files are located (relative to project root)
DOCUMENTS_DIR=documents

# Ollama server URL 
OLLAMA_HOST=http://ollama:11434

# Model to use (must be available in Ollama)
# Options: llama3.2:3b, llama3.2:1b, mistral:7b, phi3:mini, etc.
MODEL_NAME=llama3.2:3b

# Default tone for blog generation
# Options: professional, playful, authoritative, concise, inspirational
DEFAULT_TONE=professional
DEFAULT_TEMPERATURE=0.7

# Maximum length for purpose field (characters)
MAX_PURPOSE_LENGTH=500
